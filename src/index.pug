-
  const myName = 'Max Segale';
  const siteDesc = 'A portfolio of work from ' + myName + ', full stack web developer and graphic designer.';

doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='description' content=siteDesc)
    meta(name='author' content=myName)
    meta(name='copyright' content=myName)
    meta(name='robots' content='index, nofollow')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='apple-mobile-web-app-capable' content='yes')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    title #{myName} üë®üèª‚Äçüíª Portfolio
    link(rel='stylesheet' type='text/css' href='style.css')
    script(type='text/javascript' src='scripts.js')
  body
    .wrapper
      header
        nav
          h1.title#menu_title #{myName}
          .slash.heading //
          .menu_box
            ul.menu#menu_list
              li.sub_title.heading
                span#sub_title(title='Select Category') Portfolio
              li.sub_menu_box
                ul.sub_menu#sub_menu_list
          .menu_btn#menu_btn
      .container
        .nav_boxes#nav_boxes
          .nav_box#about
            h2.heading.heavy About
            .profile_pic(title='Hello, World!')
            p
              span I work as a full-stack web developer and graphic designer.
              span I specialize in front-end development and UI/UX design.
            p
              span This a collection of some freelance work and personal projects.
              span Some exciting projects are in development right now so stay tuned for cool updates!
            p
              span I built this site using HTML5/Pug, CSS3/Sass, JavaScript, MySQL, and PHP.
            a(href='https://github.com/max-segale/portfolio/tree/master/src' target='_blank' rel='noopener')
              .btn View Source Code
          .nav_box#contact
            h2.heading.heavy Contact
            .left
              p Please contact me about any new projects or job opportunities.
              p
                a(href='tel:(908)752-0639')
                  span.u_line 908.752.0639
                  span(role='img' aria-label='mobile phone') üì±
                br
                a(href='mailto:maxsegale@me.com')
                  span.u_line maxsegale@me.com
                  span(role='img' aria-label='incoming envelope') üì®
            .message_box
              form(name='ask')
                span Any questions? Please ask.
                  span(role='img' aria-label='speech balloon') üí¨
                input(type='email' name='email' placeholder='Your Email Address' maxlength='254' required)
                textarea(name='question' placeholder='Your Question' maxlength='1000' rows='3' required)
                .send_row
                  input.btn(type='submit' name='send' value='Send')
                  .status#msg_status
        .content
          span.heading.heavy#gallery_title
          ul#gallery_list
            li.loading
    footer
      .copyright
        span &copy; #{myName} <?= date('Y') ?>
